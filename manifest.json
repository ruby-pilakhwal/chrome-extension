{
  "manifest_version": 3,
  "name": "Multilingual Voice Translator",
  "version": "1.0",
  "description": "Real-time voice translation across multiple languages",
  "permissions": [
    "activeTab",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://api.mymemory.translated.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
    
  }
} 